<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Счетчик слов" Height="450" Width="400">
    <Grid>
        <Button x:Name="ButtonOpen" Content="Открыть файл" Margin="0,0,10,10" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="88" Click="open"/>

        <DataGrid Name="dataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="10,13,103,10" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Слова"  Binding="{Binding Word}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>



</Window>
